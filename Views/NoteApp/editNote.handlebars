      <div class="note-form-field note-form-status-field">
        <label class="note-form-label">Status: </label>

        <input
          id="status_active"
          type="radio"
          name="status"
          value="Active"
          {{#if (eq payload.status "Active")}}checked{{/if}}
        />
        <label class="note-form-label" for="status_active">Active</label>

        <input
          id="status_inactive"
          type="radio"
          name="status"
          value="Inactive"
          {{#if (eq payload.status "Inactive")}}checked{{/if}}
        />
        <label class="note-form-label" for="status_inactive">Inactive</label>

        <input
          id="status_completed"
          type="radio"
          name="status"
          value="Completed"
          {{#if (eq payload.status "Completed")}}checked{{/if}}
        />
        <label class="note-form-label" for="status_completed">Completed</label>

      </div>

      <button class="btn note-form-btn" type="submit">Update Note</button>
    </form>
